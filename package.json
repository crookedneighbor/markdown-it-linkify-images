{
  "name": "markdown-it-linkify-images",
  "version": "2.0.0",
  "description": "A markdown-it plugin to add links to images",
  "main": "index.js",
  "scripts": {
    "build": "node tasks/build.js && npm run minify",
    "minify": "uglifyjs dist/markdown-it-linkify-images.js > dist/markdown-it-linkify-images.min.js",
    "lint": "standard | snazzy",
    "test": "npm run lint && mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crookedneighbor/markdown-it-linkify-images.git"
  },
  "keywords": [
    "markdown-it",
    "markdown-it-plugin",
    "markdown",
    "commonmark"
  ],
  "author": "Blade Barringer <blade@crookedneighbor.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crookedneighbor/markdown-it-linkify-images/issues"
  },
  "homepage": "https://github.com/crookedneighbor/markdown-it-linkify-images#readme",
  "devDependencies": {
    "browserify": "^16.5.1",
    "chai": "^4.1.1",
    "chalk": "^4.1.0",
    "mocha": "^8.1.0",
    "rimraf": "^3.0.2",
    "snazzy": "^8.0.0",
    "standard": "^14.3.4",
    "uglify-js": "^3.10.1"
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "context",
      "describe",
      "expect",
      "it",
      "sandbox",
      "xdescribe",
      "xcontext",
      "xit"
